<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFA500" /> <!-- Orange color when pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFF00" /> <!-- Yellow color when not pressed -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>